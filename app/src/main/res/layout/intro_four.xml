<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you see message 'Auto Config successful', then everything is ok you can start using features."
            android:textColor="@color/black"
            android:gravity="start|top"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginEnd="25sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/madimi"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you see message 'Auto Config failed',then cross check values again and restart the app."
            android:textColor="@color/black"
            android:gravity="start|top"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginEnd="25sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/madimi"
            />


    </LinearLayout>

</LinearLayout>